<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo_quantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantidade de Gasolina:"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/quantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titulo_proporcao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Proporção" />

        <EditText
            android:id="@+id/proporcao"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ex: 40:1"
            android:digits="0123456789:"
            android:inputType="textFilter" />

        <Button
            android:id="@+id/botao_consulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultar Tabela" />

    </LinearLayout>

    <Button
        android:id="@+id/calcular_oleo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:onClick="calcular_oleo"
        android:text="Calcular Quantidade de Óleo" />

</LinearLayout>